<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/common_horizontal_padding"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/bg_login_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:id="@+id/iv_logo" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_toLeftOf="@+id/btn_agent"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="小区中心位置，看房十分方便"
            android:textColor="@color/text_title_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_name" />
        <TextView
            android:text="100㎡ 三室一厅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_title_color"
            android:ellipsize="end"
            android:id="@+id/tv_size" />
        <TextView
            android:text="西湖区 新村  10000/㎡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_small"
            android:ellipsize="end"
            android:id="@+id/tv_address_price" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:id="@+id/label_1"
                android:textColor="@color/main_color"
                android:textSize="9sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:padding="2dp"
                android:maxLength="3"
                android:background="@drawable/bg_label_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:id="@+id/label_2"
                android:textColor="@color/orange"
                android:textSize="9sp"
                android:maxLength="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:padding="2dp"
                android:background="@drawable/bg_label_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:id="@+id/label_3"
                android:textColor="@color/violet"
                android:textSize="9sp"
                android:maxLength="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:padding="2dp"
                android:background="@drawable/bg_label_violet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:text="300万"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/ll_content"
        android:textSize="@dimen/text_size_big"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_total_money" />

    <TextView
        android:id="@+id/btn_delete"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="删  除"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>